<h1>Listing presets</h1>

<table>
  <thead>
    <tr>
      <th>Brightness</th>
      <th>Saturtion</th>
      <th>Hue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presets.each do |preset| %>
      <tr>
        <td><%= preset.brightness %></td>
        <td><%= preset.saturtion %></td>
        <td><%= preset.hue %></td>
        <td><%= link_to 'Show', preset %></td>
        <td><%= link_to 'Edit', edit_preset_path(preset) %></td>
        <td><%= link_to 'Destroy', preset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Preset', new_preset_path %>
